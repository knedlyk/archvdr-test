# Maintainer : Edgar Hucek <gimli at dark-green dot com>

pkgname=w_scan
pkgver=20121111
pkgrel=1
arch=(i686 x86_64 arm)
pkgdesc="Tool for scanning dvb channels"
url="http://wirbel.htpc-forum.de/w_scan/index2.html"
license="GPL"
makedepends=('kernel-headers')
backup=()
source=(http://wirbel.htpc-forum.de/w_scan/w_scan-${pkgver}.tar.bz2)
md5sums=('30da05747fed9988e11ebc7745f5e71f')

build() {
  unset CXXFLAGS

  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
  
  make DESTDIR=$pkgdir install

}
