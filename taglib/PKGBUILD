# Contributor: Edgar Hucek <gimli at dark-green dot com>

pkgname=taglib
pkgver=1.8
pkgrel=1
pkgdesc="mp3 taglib"
url="http://mirrors.xbmc.org/build-deps/sources"
arch=('i686' 'x86_64')
license=('GPL')
depends=()
makedepends=('gcc' 'autoconf' 'cmake')
source=(http://mirrors.xbmc.org/build-deps/sources/${pkgname}-${pkgver}.tar.gz)
md5sums=('dcb8bd1b756f2843e18b1fdf3aaeee15')
conflicts=()

build() {
  
  cd ${srcdir}/${pkgname}-${pkgver}

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_RELEASE_TYPE=Release

  make

  make DESTDIR=$pkgdir install

}
